<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gedoumi.quwabao.user.mapper.UserTeamExtMapper">

    <select id="queryUserByParentId" resultType="User">
        SELECT u.id, u.mobile_phone, u.username
        FROM user_tree ut
                 LEFT JOIN user u ON u.id = ut.child_id
        WHERE ut.parent_id = #{param1}
    </select>

    <select id="queryUserIdsByParentId" resultType="java.lang.Long">
        SELECT child_id
        FROM user_tree
        WHERE parent_id IN
        <foreach collection="list" item="item" open="(" separator="," close=")">#{item}</foreach>
    </select>

    <insert id="createUserTree">
        INSERT INTO user_tree (child_id, parent_id)
        VALUES (#{param1}, #{param2})
    </insert>

</mapper>